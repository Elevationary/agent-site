{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Elevationary Product Catalog",
  "description": "Schema for validating the products.json array",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "key",
      "slug",
      "title",
      "price",
      "currency",
      "og_image",
      "booking_url"
    ],
    "properties": {
      "key": {
        "type": "string",
        "pattern": "^[a-z0-9_]+$"
      },
      "slug": {
        "type": "string",
        "pattern": "^[a-z0-9\\-]+$"
      },
      "title": {
        "type": "string",
        "minLength": 5
      },
      "description": {
        "type": "string",
        "minLength": 20
      },
      "price": {
        "type": "number",
        "minimum": 0
      },
      "currency": {
        "type": "string",
        "pattern": "^[A-Z]{3}$",
        "default": "USD"
      },
      "type": {
        "type": "string",
        "enum": [
          "service",
          "subscription"
        ],
        "default": "service"
      },
      "stripe_price_id": {
        "type": "string"
      },
      "og_image": {
        "type": "string",
        "pattern": "^(https?:\\/\\/[^/]+)?/.*\\.(png|jpg|jpeg|gif|webp)$",
        "description": "Image path, either relative (starting with /) or absolute URL"
      },
      "indexable": {
        "type": "boolean",
        "default": true
      },
      "booking_url": {
        "type": "string"
      },
      "pay_url": {
        "type": "string"
      },
      "lastmod": {
        "type": "string",
        "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
        "description": "Last modified date in YYYY-MM-DD format"
      }
    },
    "additionalProperties": false
  }
}