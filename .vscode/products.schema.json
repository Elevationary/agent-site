{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Elevationary product catalog",
  "type": "object",
  "properties": {
    "products": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "slug",
          "title",
          "price",
          "currency",
          "image",
          "booking_url",
          "pay_url",
          "indexable"
        ],
        "properties": {
          "slug": { "type": "string", "pattern": "^[a-z0-9\\-]+$" },
          "title": { "type": "string" },
          "description": { "type": "string" },
          "price": { "type": "string", "pattern": "^\\d+(\\.\\d{2})?$" },
          "currency": { "type": "string", "pattern": "^[A-Z]{3}$" },
          "image": { "type": "string", "format": "uri" },
          "booking_url": { "type": "string", "format": "uri" },
          "pay_url": { "type": "string", "format": "uri" },
          "indexable": { "type": "boolean" },
          "lastmod": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" }
        }
      }
    }
  },
  "additionalProperties": false
}
