---
layout: base.njk
pagination:
  data: products
  size: 1
  alias: product
  addAllPagesToCollections: true
permalink: "/{{ product.slug }}/"
eleventyComputed:
  title: "{{ product.title }}"
  description: "{{ product.description }}"
  og_image: "{{ product.og_image }}"
  canonical: "https://agent.elevationary.com/{{ product.slug }}/"
---

<article class="container mx-auto px-4 py-12">
  <div class="max-w-3xl mx-auto">
    <header class="mb-8">
      <h1 class="text-4xl font-bold mb-4">{{ product.title }}</h1>
      <p class="text-2xl text-gray-600">${{ product.price | numberFormat("0.00") }}</p>
    </header>

    <div class="prose max-w-none">
      {% if product.og_image %}
        <img 
          src="{{ product.og_image }}" 
          alt="{{ product.title }}" 
          class="w-full h-auto rounded-lg mb-8"
        >
      {% endif %}
      
      <div class="prose-lg">
        {{ content | safe }}
      </div>
      
      <div class="mt-8 space-y-4">
        <a 
          href="{{ product.booking_url }}" 
          target="_blank"
          rel="noopener noreferrer nofollow"
          class="inline-block w-full md:w-auto text-center bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg transition-colors"
        >
          Book Now
        </a>
        
        <a 
          href="{{ product.pay_url }}" 
          target="_blank"
          rel="noopener noreferrer nofollow"
          class="inline-block w-full md:w-auto text-center bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-6 rounded-lg transition-colors"
        >
          Pay Now
        </a>
      </div>
    </div>
  </div>
</article>

{% include "structured-data/product.njk" %}