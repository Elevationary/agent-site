{% if product %}
<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Product",
    "@id": "https://agent.elevationary.com/{{ product.slug }}/#product",
    "name": "{{ product.title }}",
    "description": "{{ product.description | escape }}",
    "brand": {
      "@type": "Brand",
      "name": "Elevationary"
    },
    "image": [
      "https://agent.elevationary.com{{ product.og_image }}"
    ],
    "offers": {
      "@type": "Offer",
      "@id": "https://agent.elevationary.com/{{ product.slug }}/#offer",
      "url": "https://agent.elevationary.com/{{ product.slug }}/",
      "priceCurrency": "{{ product.currency }}",
      "price": "{{ product.price }}",
      "priceValidUntil": "2025-12-31",
      "availability": "https://schema.org/InStock",
      "seller": {
        "@type": "Organization",
        "name": "Elevationary",
        "url": "https://elevationary.com"
      }
    }
  }
</script>
{% endif %}